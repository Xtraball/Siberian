        margin-left: 10px;
        margin-top: 5px;
        border-radius: 3px;
        padding: 4px;
        transition: none;
    }

    .design a.layout.selected {
        padding: 2px;
        border: 1px solid;
    }

    .design .layouts a.layout img {
        border-radius: 3px;
    }

</style>