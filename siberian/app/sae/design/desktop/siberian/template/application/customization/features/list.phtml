                    }
                });
            } else {
                var order_url = "<?php echo $this->getUrl('application/customization_features/seticonpositions'); ?>?" + order;
                reload($('#option_values'), order_url, true, function () {
                    iframe.f.reloadTabbar();

//                        iframe.f.page.loadHomePage();
