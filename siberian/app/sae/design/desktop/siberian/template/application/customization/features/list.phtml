            position: this.place.geometry.location,
            radius: this.radius
        };

        if (this.circle) {
            this.circle.setMap(null);
        }

        this.circle = new google.maps.Circle(sunCircle);
        this.circle.bindTo('center', this.marker, 'position');

        this.map.fitBounds(this.circle.getBounds());

        return this;
    },

