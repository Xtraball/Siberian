<sb-section title="'<?php echo addslashes(__("List of your users")); ?>'" button="button">
    <br />
    <div class="form-group">
        <label for="filter"><?php echo __("Search"); ?></label>
        <input type="text"
               id="filter"
               class="form-control"
               ng-model="filter"
               placeholder="<?php echo __("Search"); ?>" />
    </div>
    <br />
    <table class="table">
        <col width="5%" />
        <col width="20%" />
        <col width="20%" />
        <col width="20%" />
        <col width="15%" />
        <col width="15%" />
        <thead>
            <tr>
                <th class="pointer"
                    ng-click="order = 'id'; by = !by"><?php echo __("Id"); ?></th>
                <th class="pointer"
                    ng-click="order = 'username'; by = !by"><?php echo __("User name"); ?></th>
                <th class="pointer"
                    ng-click="order = 'firstname'; by = !by"><?php echo __("Firstname"); ?></th>
                <th class="pointer"
                    ng-click="order = 'lastname'; by = !by"><?php echo __("Lastname"); ?></th>
                <th class="pointer"
                    ng-click="order = 'created_at'; by = !by"><?php echo __("Created At"); ?></th>
                <th><?php echo __("Actions"); ?></th>
            </tr>
        </thead>
        <tbody>
            <tr class="slide-left"
                ng-repeat="user in users | filter:filter | orderBy:order:by">
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.created_at }}</td>
                <td class="text-right">
                    <a href="<?php echo $this->getUrl("api/backoffice_user_edit"); ?>/user_id/{{ user.id }}"
                       class="btn btn-sm btn-primary">EDIT</a>
                    <a href="javascript:void(0);"
                       ng-click="delete(user)"
                       class="btn btn-sm btn-danger">DELETE</a>
                </td>
            </tr>
            <tr ng-show="!users.length">
                <td colspan="5"
                    class="a-center"><?php echo __("You don't have any users yet"); ?></td>
            </tr>
        </tbody>
    </table>

    <style type="text/css">
        .btn-sm {
            padding: 1px 5px !important;
            font-size: 11px !important;
            line-height: 1.4 !important;
            font-weight: bold;
            border: 0 !important;
        }

        a.btn-sm,
        a.btn-sm:hover {
            text-decoration: none !important;
        }
    </style>
</sb-section>