        $('.save_image').on('click', function() {
            var that = $(this);
            var galleryId = that.attr('rel');
            var formLine = that.parents('div.row_image');
            if (galleryId === 'create') {
                formLine = that.parents('div.row');
            }

            var error = false;

            // Validate form
            formLine.find('input.required, select.required').each(function() {
                if (!$(this).val()) {
                    $(this).addClass('error');
                    if ($(this).next('p.error').length == 0) {
                        $(this).after('<p class="error"><?php echo __js('Required field') ?></p>');
                    }
                    error = true;
                } else {
                    $(this).removeClass('error');
                    $(this).next('p.error').remove();
                }
            });

            if (error) {
                return false;
            }

            // Facebook gallery name!
            var galleryName = $('#gallery_name').val();
            $('#label').val(galleryName);

            var formData = $('div.row_image[rel="' + galleryId + '"], #list_' + galleryId)
